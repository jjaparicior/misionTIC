@page
@model ProyectoCiclo3.App.Frontend.Pages.FormServicioModel
@{
}

<div class="text-center">
  <form method="post">
    
  <label for="origen" class="form-label">Origen:</label>

  <select name="origen" required class="form-control">
    <option value="">-</option>
    @foreach (var usuario in Model.Usuarios)
    {
      <option value="@usuario.id">@usuario.nombre @usuario.apellidos - @usuario.ciudad</option>
    }
  </select>

  @* <input type="text" class="form-control" id="origen" placeholder="Origen" name="origen" required> *@

  <label for="destino" class="form-label">Destino:</label>

  <select name="destino" required class="form-control">
    <option value="">-</option>
    @foreach (var usuario in Model.Usuarios)
    {
      <option value="@usuario.id">@usuario.nombre @usuario.apellidos - @usuario.ciudad</option>
    }
  </select>

  @* <input type="text" class="form-control" id="destino" placeholder="Destino" name="destino" required> *@

  <label for="fecha" class="form-label">Fecha:</label>
  <input type="date" class="form-control" id="fecha" placeholder="Fecha" name="fecha" required>

  <label for="hora" class="form-label">Hora:</label>
  <input type="time" class="form-control" id="hora" placeholder="Hora" name="hora" required>
  
  <label for="encomienda" class="form-label">Encomienda:</label>

    <select name="encomienda" required class="form-control">
    <option value="">-</option>
    @foreach (var encomienda in Model.Encomiendas)
    {
      <option value="@encomienda.id">@encomienda.descripcion</option>
    }
  </select>
  
  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div>